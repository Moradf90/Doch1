<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/a_status_layout"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#c18a08">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A status"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_status_layout"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#123456">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="B status"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/r3" >

        <LinearLayout
            android:id="@+id/c_status_layout"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#D71ad8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C status"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/d_status_layout"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#187654" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="D status"/>
        </LinearLayout>
    </RelativeLayout>

