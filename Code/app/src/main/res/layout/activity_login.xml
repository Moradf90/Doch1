<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:padding="40dp">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_layout"
        style="@style/AppTheme.Text.TextInputLayout"
        app:hintTextAppearance="@style/AppTheme.Text.HintText"
        app:errorTextAppearance="@style/AppTheme.Text.ErrorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/AppTheme.EditText.EmailField"
            android:drawablePadding="10dp"
            android:id="@+id/email" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_layout"
        style="@style/AppTheme.Text.TextInputLayout"
        app:hintTextAppearance="@style/AppTheme.Text.HintText"
        app:errorTextAppearance="@style/AppTheme.Text.ErrorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText style="@style/AppTheme.EditText.PasswordField"
            android:id="@+id/password" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sign In"
        android:id="@+id/btn_sign_in"
        android:background="@drawable/selector_xml_btn_yellow"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forgot password?"
        android:id="@+id/btn_forgot_password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#FFF"
/>

</LinearLayout>

