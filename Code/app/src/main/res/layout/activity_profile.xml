<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ProfileActivity">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <t.a.m.com.doch1.views.RoundedImageView
            android:id="@+id/picture"
            android:src="@drawable/profile_pic"
            android:layout_width="200sp"
            android:layout_height="200sp" />

        <ImageButton
            android:id="@+id/edit_pic"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_alignEnd="@+id/picture"
            android:layout_alignBottom="@+id/picture"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryBackground"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/display_name_view"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="Morad Faris"
                android:textColor="@color/inputLabelColor"
                android:textSize="18sp"
                android:textAlignment="center"
                android:id="@+id/display_name_text"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/display_name_edit"
                android:text="Edit"
                android:drawableLeft="@drawable/ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_layout"
            android:layout_weight="1"
            android:visibility="gone"
            style="@style/AppTheme.Text.TextInputLayout"
            app:hintTextAppearance="@style/AppTheme.Text.HintText"
            app:errorTextAppearance="@style/AppTheme.Text.ErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                style="@style/AppTheme.EditText"
                android:drawablePadding="10dp"
                android:hint="Display Name"
                android:id="@+id/name" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</LinearLayout>
